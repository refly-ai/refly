{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // path
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "@refly-packages/ai-workspace-common/*": ["./src/*"],
      "@refly/utils/*": ["../utils/src/*"],
      "@/*": ["./src/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "files": ["../tsconfig/global.d.ts"],
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../utils/tsconfig.json" }]
}
