{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "tags": ["-lintignore"],
  "rules": {
    "duplicates": "warn",
    "unresolved": "warn",
    "unlisted": "warn"
  },
  "ignore": [
    "postcss.config.*",
    "*.config.ts",
    "**/scripts/**",
    "apps/web/src/service-worker-sw.ts",
    "apps/api/load-tests/**",
    "docs/.vitepress/**",
    "packages/cli/**"
  ],
  "workspaces": {
    ".": {},
    "apps/api": {
      "entry": ["src/main.ts", "src/scripts/preload.ts"],
      "project": ["src/**/*.{ts,tsx,js,jsx}"],
      "paths": {
        "@refly-packages/ai-workspace-common": ["../../packages/ai-workspace-common/src/index.ts"],
        "@refly-packages/ai-workspace-common/*": ["../../packages/ai-workspace-common/src/*"]
      }
    },
    "apps/web": {
      "entry": ["src/index.tsx"],
      "project": ["src/**/*.{ts,tsx,js,jsx}"],
      "paths": {
        "@refly-packages/ai-workspace-common": ["../../packages/ai-workspace-common/src/index.ts"],
        "@refly-packages/ai-workspace-common/*": ["../../packages/ai-workspace-common/src/*"]
      }
    },
    "packages/web-core": {
      "entry": ["src/index.ts", "src/pages/**/*.{ts,tsx}"],
      "project": ["src/**/*.{ts,tsx,js,jsx}"],
      "paths": {
        "@refly-packages/ai-workspace-common": ["../ai-workspace-common/src/index.ts"],
        "@refly-packages/ai-workspace-common/*": ["../ai-workspace-common/src/*"]
      }
    },
    "packages/ai-workspace-common": {
      "entry": [
        "src/index.ts",
        "src/components/**/index.{ts,tsx}",
        "src/components/slideshow/**/*.{ts,tsx,css}",
        "src/components/workflow-app/**/*.{ts,tsx,css,scss,svg}",
        "src/components/workflow-list/**/*.{ts,tsx,css,scss,svg}",
        "src/components/subscription/**/*.{ts,tsx,css,scss}",
        "src/components/rjsf/**/*.{ts,tsx}",
        "src/components/canvas-template/**/*.{ts,tsx,css,scss,svg}",
        "src/components/editor/**/*.{ts,tsx,css,scss}",
        "src/hooks/**/*.{ts,tsx}",
        "src/context/**/*.{ts,tsx}",
        "src/modules/**/*.{ts,tsx}",
        "src/queries/**/*.{ts,tsx}",
        "src/requests/**/*.{ts,tsx}",
        "src/utils/**/*.{ts,tsx}",
        "src/events/**/*.{ts,tsx}",
        "src/styles/**/*.{css,scss}",
        "src/assets/**/*.{png,webp,svg}"
      ],
      "project": ["src/**/*.{ts,tsx,css,scss}"],
      "paths": {
        "@refly-packages/ai-workspace-common": ["./src/index.ts"],
        "@refly-packages/ai-workspace-common/*": ["./src/*"]
      }
    }
  }
}
