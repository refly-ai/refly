{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["sync-db-schema"]
    },
    "sync-db-schema": {
      "cache": false,
      "persistent": false
    },
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint:ci": {},
    "lint": {},
    "codegen": {},
    "clean": {
      "cache": false,
      "outputs": ["packages/*/build"]
    }
  }
}
