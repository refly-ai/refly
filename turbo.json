{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["*"],
      "dependsOn": ["sync-db-schema"]
    },
    "dev:electron": {
      "cache": false,
      "persistent": true,
      "env": ["*"],
      "dependsOn": ["sync-db-schema"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "env": ["*"]
    },
    "start:electron": {
      "cache": false,
      "persistent": true,
      "env": ["*"],
      "dependsOn": ["build:electron"]
    },
    "sync-db-schema": {
      "cache": false,
      "persistent": false
    },
    "copy-env": {
      "cache": false,
      "persistent": false
    },
    "copy-env:develop": {
      "cache": false,
      "persistent": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["*"]
    },
    "build:fast": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["*"]
    },
    "build:electron": {
      "dependsOn": ["^build"],
      "outputs": ["dist-electron/**"],
      "env": ["*"]
    },
    "package:electron": {
      "dependsOn": ["build:electron"],
      "outputs": ["release/**"],
      "env": ["*"]
    },
    "codegen": {
      "cache": false
    },
    "clean": {
      "cache": false,
      "outputs": ["packages/*/build"]
    }
  }
}
